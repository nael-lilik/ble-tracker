// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Site {
  id          Int      @id @default(autoincrement())
  name        String   @db.VarChar(255)
  description String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  rooms Room[]

  @@map("sites")
}

model Room {
  id              Int     @id @default(autoincrement())
  siteId          Int
  name            String  @db.VarChar(255)
  width           Float   // in meters
  height          Float   // in meters
  scale           Float   @default(1.0) // pixels per meter
  backgroundImage String? @db.VarChar(500)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  site              Site                @relation(fields: [siteId], references: [id], onDelete: Cascade)
  scannerNodes      ScannerNode[]
  assetPresences    AssetPresence[]
  occupancySnapshots OccupancySnapshot[]

  @@index([siteId])
  @@map("rooms")
}

model ScannerNode {
  id         Int       @id @default(autoincrement())
  nodeId     String    @unique @db.VarChar(100) // e.g., "NODE-01"
  macAddress String?   @unique @db.VarChar(17)  // MAC address of the ESP32
  name       String    @db.VarChar(255)
  roomId     Int
  x          Float     // position in room (meters)
  y          Float     // position in room (meters)
  lastSeen   DateTime?
  status     String    @default("offline") @db.VarChar(50) // online, offline
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  room       Room        @relation(fields: [roomId], references: [id], onDelete: Cascade)
  deviceLogs DeviceLog[]

  @@index([roomId])
  @@index([nodeId])
  @@map("scanner_nodes")
}

model Asset {
  id          Int      @id @default(autoincrement())
  macAddress  String   @unique @db.VarChar(17) // MAC address
  name        String   @db.VarChar(255)
  type        String?  @db.VarChar(100) // e.g., "phone", "beacon", "laptop"
  description String?  @db.Text
  isBeacon    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  assetPresences AssetPresence[]

  @@index([macAddress])
  @@map("assets")
}

model DeviceLog {
  id            Int      @id @default(autoincrement())
  macAddress    String   @db.VarChar(17)
  scannerNodeId Int
  rssi          Int      // signal strength
  timestamp     DateTime @default(now())
  isAsset       Boolean  @default(false) // true if this MAC is a registered asset
  hashedMac     String   @db.VarChar(64) // SHA256 hash for privacy

  scannerNode ScannerNode @relation(fields: [scannerNodeId], references: [id], onDelete: Cascade)

  @@index([macAddress])
  @@index([timestamp])
  @@index([scannerNodeId])
  @@index([hashedMac])
  @@map("device_logs")
}

model AssetPresence {
  id         Int       @id @default(autoincrement())
  assetId    Int
  roomId     Int
  enteredAt  DateTime  @default(now())
  lastSeenAt DateTime  @default(now())
  exitedAt   DateTime?

  asset Asset @relation(fields: [assetId], references: [id], onDelete: Cascade)
  room  Room  @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@index([assetId])
  @@index([roomId])
  @@index([enteredAt])
  @@map("asset_presences")
}

model OccupancySnapshot {
  id           Int      @id @default(autoincrement())
  roomId       Int
  deviceCount  Int      // unique devices detected
  densityLevel String   @db.VarChar(20) // LOW, MEDIUM, HIGH
  timestamp    DateTime @default(now())

  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@index([roomId])
  @@index([timestamp])
  @@map("occupancy_snapshots")
}
